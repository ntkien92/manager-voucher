.right_col[role="main"]
  .row
    .col-md-offset-1.col-md-9.col-xs-12
      .x_panel
        .x_title
          h2
            = I18n.t('documents.form.title')
          ul.nav.navbar-right.panel_toolbox
            li
              a.collapse-link
                i.fa.fa-chevron-up
            li
              a.close-link
                i.fa.fa-close
          .clearfix
        .x_content
          br
          = form_for @document, html: { multipart: true, url: url, method: method.to_sym, class: 'form-horizontal form-label-left' } do |f|
            - if @document.errors.any?
                .form-group
                  #error_explanation.col-md-offset-3.col-sm-offset-3.col-md-9.col-sm-9.col-xs-12
                    h2 = "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
                    ul
                      - @document.errors.full_messages.each do |message|
                        li = message
            .form-group
              = f.label :title, I18n.t('documents.column.title'), class: 'control-label col-md-3 col-sm-3 col-xs-12'
              .col-md-9.col-sm-9.col-xs-12
                = f.text_field :title, autofocus: true, class: 'form-control', placeholder: "Default Input", :required => ""
            .form-group
              = f.label :content, I18n.t('documents.column.content'), class: 'control-label col-md-3 col-sm-3 col-xs-12'
              .col-md-9.col-sm-9.col-xs-12
                = f.text_area :content, autofocus: true, class: 'form-control', placeholder: "Default Input", :required => ""
            .form-group
              = f.label :name, I18n.t('documents.column.name'), class: 'control-label col-md-3 col-sm-3 col-xs-12'
              .col-md-9.col-sm-9.col-xs-12
                = f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Default Input", :required => ""
            .form-group
              = f.label :department_ids, I18n.t('documents.column.name'), class: 'control-label col-md-3 col-sm-3 col-xs-12'
              .col-md-9.col-sm-9.col-xs-12
                = f.collection_check_boxes :department_ids, @departments, :id, :name, checked: @department_ids do |b|
                  = b.check_box
                  = b.text
                  br
            .ln_solid
            .form-group
              .col-md-9.col-sm-9.col-xs-12.col-md-offset-3
                = link_to I18n.t('documents.form.cancel'), documents_path, class: 'btn btn-primary'
                = f.submit I18n.t('documents.form.submit'), class: 'btn btn-success'
    .clearfix

